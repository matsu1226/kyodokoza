<%= provide(:title, "設定") %>
<div class="setting-links">

  <%= link_to logout_path, method: :delete, class: "setting-link-wrapper logout-wrapeer" do%>
    <p class="setting-link">ログアウト</p>
    <i class="fas fa-angle-right fa-lg angle"></i>
  <% end %>
  <%= link_to edit_user_path(@user), class: "setting-link-wrapper" do%>
    <p class="setting-link">アカウント情報の変更</p>
    <i class="fas fa-angle-right fa-lg angle"></i>
  <% end %>
  <% if @user.relationship %>
    <%= link_to relationship_path(@user.relationship), class: "setting-link-wrapper" do%>
      <p class="setting-link">家族の情報</p>
      <i class="fas fa-angle-right fa-lg angle"></i>
    <% end %>
    <%= link_to categories_path, class: "setting-link-wrapper" do%>
      <p class="setting-link">カテゴリーの情報</p>
      <i class="fas fa-angle-right fa-lg angle"></i>
    <% end %>
    <%= link_to fixed_costs_path, class: "setting-link-wrapper" do%>
      <p class="setting-link">固定費の設定</p>
      <i class="fas fa-angle-right fa-lg angle"></i>
    <% end %>
    <%= link_to report_multiple_path, class: "setting-link-wrapper" do%>
      <p class="setting-link">まとめてエクセル出力</p>
      <i class="fas fa-angle-right fa-lg angle"></i>
    <% end %>
  <% end %>
  <% if @user.relationship.nil? %>
    <%= link_to new_relationship_path, class: "setting-link-wrapper" do%>
      <p class="setting-link">家族の登録</p>
      <i class="fas fa-angle-right fa-lg angle"></i>
    <% end %>
  <% end %>
</div>