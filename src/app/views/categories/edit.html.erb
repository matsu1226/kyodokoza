<%= provide(:title, "カテゴリの編集") %>
<section class="section-wrapper">
  <%= form_with(model: @category, url: {controller: 'categories', action: 'update' }, local: true) do |f| %>
  <%= render 'shared/category_error_messages' %>

  <%= f.label :name, "カテゴリの名前：", class: "form-label" %>
  <%= f.text_field :name, value: @category.name %>
  <p class="sub-info">8文字以内<br>記録の一覧で表示されます。4文字以下だと見やすいです</p>

  <%= f.label :content, "カテゴリの説明：", class: "form-label" %>
  <%= f.text_field :content, value: @category.content %>
  <p class="sub-info">30文字以内(空欄も可)。カテゴリの補足説明です</p>

  <%= f.label :color, "カテゴリカラー：", class: "form-label" %>
  <%= f.color_field :color, value: @category.color, list: "color-list" %>
  <datalist id="color-list">
    <% @color_list.each do |color| %>
    <option value="<%= color %>"></option>
    <% end %>
  </datalist>  

    <%= f.submit "カテゴリの更新" ,class: "btn standerd-btn btn-primary" %>

    <% end %>
    <%= link_to "カテゴリの削除", category_path(@category), method: :delete, class: "btn danger-btn btn-primary category-delete-btn", data: { confirm: "本当に削除しますか？"} %>
</section>