<%= provide(:title, "記録の一覧") %>
<section class="section-wrapper post-index-header-section">
  <div id="month_info">
    <%= render partial: 'month_info' %>
  </div>
  <div id="post_index_head" class="post-index-head card shadow-none">
    <%= render partial: 'post_index_head' %>
  </div>
</section>
<section class="section-wrapper post-index-main-section">
  <div id="post_list">
    <%= render partial: 'post', collection: @posts %>
  </div>
</section>
<section class="section-wrapper post-index-lower-section">
  <div id="price_sum">
    <%= render partial: 'price_sum' %>
  </div>
</section>