<%= provide(:title, "ログイン") %>
  <div class="form">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <%# <%= render 'shared/error_messages' %>
      <%= f.label :email, "メールアドレス：", class: "form-label" %>
      <%= f.email_field :email%>

      <%= f.label :password, "パスワード：", class: "form-label" %>
      <%= f.password_field :password%>
      <p class="sub-info">8文字以上20文字以内</p>

      <%= f.submit "ログイン" ,class: "btn standerd-btn btn-primary" %>

    <% end %>
    <%= link_to "まだ登録されてない方はこちら", new_user_path, class: "moderate" %>
  </div>
